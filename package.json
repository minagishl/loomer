{
  "name": "loomer",
  "version": "0.1.0",
  "description": "Merge multiple files into one AI-optimized document.",
  "type": "module",
  "bin": {
    "loomer": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "cli",
    "merge",
    "concatenate",
    "files",
    "tooling"
  ],
  "author": "minagishl",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/minagishl/loomer.git"
  },
  "homepage": "https://github.com/minagishl/loomer#readme",
  "bugs": {
    "url": "https://github.com/minagishl/loomer/issues"
  },
  "scripts": {
    "start": "bun dist/index.js",
    "dev": "bun run start",
    "test": "bun test",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --check \"**/*.{ts,tsx,js,json,md,yml,yaml}\"",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,json,md,yml,yaml}\"",
    "build": "bun scripts/build.mjs",
    "prepare": "husky",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "node-html-parser": "^6.1.11",
    "yaml": "^2.4.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.10",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "prettier": "^3.7.4"
  }
}
